@using Controle_de_contatos.Enums;
@model UsuarioModel
@{
    ViewData["Title"] = "Editar usuário";
}

<div class="text-center">

    <h1 class="display-4">Editar usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Editar" method="post" >

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

     <div class="form-group">
     <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

     <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="perfil">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="" >Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
			<option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <br />
    
    <button type="submit" class="btn btn-outline-success">Alterar</button>
    <a class="btn btn-outline-primary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>

