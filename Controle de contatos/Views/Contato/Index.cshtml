                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a role="button" class="btn btn-outline-primary" asp-controller="Contato" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-outline-danger" asp-controller="Contato" asp-action="ApagarConfirmacao">Excluir</a>
                    </div>
                </td>
            </tr>

            <tr>
                <th scope="row">2</th>
